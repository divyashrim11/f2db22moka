extends layout

block content
  h1= title
  - var results = [{"BurgerType":"Veggie","BurgerSize":"Small","BurgerCost":4},{"BurgerType":"Mozarilla","BurgerSize":"Medium","BurgerCost":5},{"BurgerType":"Cheese","BurgerSize":"Large","BurgerCost":7}];
  div(class="container-fluid")
    div(class="row")
    each item in results
      div(class="col-sm-2" width="200px") Burger Type:#{item.BurgerType}, Burger Size:#{item.BurgerSize}, Burger Cost:#{item.BurgerCost}
  div(class="container-fluid")
    div(class="row")
    - for(var i=0;i<results.length;i++) {
        div(class="col-sm-2" width="215px" onClick=`buy(${i+1})`) #{results[i].BurgerType}
    -}
  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }